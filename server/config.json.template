{
  "log": {
    "access": "/dev/stdout",
    "error": "/dev/stderr",
    "loglevel": "warning"
  },
  "api": {
    "tag": "api",
    "services": [ "StatsService" ]
  },
  "dns": {},
  "stats": {},
  "routing": {
    "rules": [
      {
        "type": "field",
        "inboundTag": [ "api" ],
        "outboundTag": "api"
      },
      {
        "type": "field",
        "outboundTag": "block",
        "protocol": [ "bittorrent" ]
      },
      {
        "type": "field",
{{^REALITY_SEND_THRU_CN}}
       "outboundTag": "block",
{{/REALITY_SEND_THRU_CN}}
{{#REALITY_SEND_THRU_CN}}
       "outboundTag": "cn",
{{/REALITY_SEND_THRU_CN}} 
        "domain": [ "geosite:cn" ]
      },
      {
        "type": "field",
{{^REALITY_SEND_THRU_CN}}
       "outboundTag": "block",
{{/REALITY_SEND_THRU_CN}}
{{#REALITY_SEND_THRU_CN}}
       "outboundTag": "cn",
{{/REALITY_SEND_THRU_CN}}
        "ip": [ "geoip:cn" ]
      }
    ]
  },
  "policy": {
    "levels": {
      "0": {
        "statsUserUplink": true,
        "statsUserDownlink": true
      }
    }
  },
  "inbounds": [
    {
      "listen": "0.0.0.0",
      "port": 443,
      "protocol": "vless",
      "settings": {
        "clients": [
{{#REALITY_UUIDS}}
          {
            "id": "{{.}}",
            "flow": "xtls-rprx-vision"
          },
{{/REALITY_UUIDS}}
        ],
        "decryption": "none"
      },
      "streamSettings": {
        "network": "tcp",
        "security": "reality",
        "realitySettings": {
          "show": false,
          "dest": "{{REALITY_DEST_HOST}}:443",
          "serverNames": [
{{#REALITY_DOMAINS}}
            "{{.}}",
{{/REALITY_DOMAINS}}
          ],
          "privateKey": "{{REALITY_PRIV_KEY}}",
          "shortIds": [
{{#REALITY_SHORT_IDS}}
            "{{.}}",
{{/REALITY_SHORT_IDS}}
          ]
        }
      }
    },
    {
      "port": 8888,
      "protocol": "dokodemo-door",
      "settings": { "address": "0.0.0.0" },
      "tag": "api"
    }
  ],
  "outbounds": [
    {
      "protocol": "freedom",
{{#REALITY_SEND_THRU_DEF}}
      "sendThrough": "{{REALITY_SEND_THRU_DEF}}",
{{/REALITY_SEND_THRU_DEF}}
      "settings": {}
    },
{{#REALITY_SEND_THRU_CN}}
    {
      "protocol": "freedom",
      "sendThrough": "{{REALITY_SEND_THRU_CN}}",
      "settings": {},
      "tag": "cn"
    },
{{/REALITY_SEND_THRU_CN}}
   {
      "protocol": "blackhole",
      "settings": {},
      "tag": "block"
    }
  ]
}
